
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <LinearLayout
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sex: "
            android:textStyle="bold"/>
        
        <Spinner 
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age: "
            android:textStyle="bold"/>
        
        <Spinner 
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Height: "
            android:textStyle="bold"/>
        
        <Spinner 
            android:id="@+id/height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
        <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Accelerometer position: "
	        android:textStyle="bold" />
        
        <Spinner
            android:id="@+id/accelerometer_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
    </LinearLayout>
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
        <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Shoes type: "
	        android:textStyle="bold" />
        
        <Spinner 
            android:id="@+id/shoes_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
    </LinearLayout>

    <LinearLayout
        android:id="@+id/stairsContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="vertical" >
        
        	<EditText
        	    android:id="@+id/notes"
        	    android:layout_width="fill_parent"
        	    android:layout_height="wrap_content"
        	    android:lines="5"
        	    android:text="Provides some notes here about the data" />
        	
        	<LinearLayout 
        	    android:orientation="horizontal"
        	    android:layout_width="fill_parent"
        	    android:layout_height="wrap_content"
        	    android:layout_gravity="center">
        	    
        	    <Button 
        	        android:id="@+id/btnStartStairs"
        	        android:text="Inizio Scale"
        	        android:layout_width="0dp"
        	        android:layout_height="wrap_content"
        	        android:layout_weight="1"/>
        	    
        	</LinearLayout>
        	
        	<RadioGroup 
        	    android:id="@+id/radioGroupStairsType"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:orientation="horizontal"
        	    android:layout_gravity="center_horizontal">
        	    
        	    <RadioButton 
        	        android:id="@+id/radioStairsUp"
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:text="Scale su"
        	        android:checked="true"/>
        	    
        	    <RadioButton
        	        android:id="@+id/radioStairsDown"
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:text="Scale giÃ¹"
        	        android:checked="false"/>
        	    
        	</RadioGroup> 
        	
        	<LinearLayout 
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
                
                <Button 
                    android:id="@+id/btnStartAltro"
                    android:text="Inizio altro"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
                
            </LinearLayout>
        	
            <Button
                android:id="@+id/btnStopDataAcquisition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="true"
                android:layout_gravity="center"
                android:text="Interrompi registrazione dati" />

    </LinearLayout>

    <RadioGroup
        android:id="@+id/radioSamplingGroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:gravity="bottom"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioSamplingNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/radioSamplingGame"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:checked="false"
            android:enabled="false"
            android:text="65ms" />

        <RadioButton
            android:id="@+id/radioSamplingUI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/radioSamplingNormal"
            android:layout_gravity="left|center_vertical"
            android:checked="false"
            android:enabled="false"
            android:text="32ms" />
        
        <RadioButton
            android:id="@+id/radioSamplingGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right|center_vertical"
            android:checked="false"
            android:enabled="false"
            android:text="16ms" />

        <RadioButton
            android:id="@+id/radioSamplingFastest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/radioSamplingNormal"
            android:layout_gravity="left|center_vertical"
            android:checked="true"
            android:text="8ms" />
            
    </RadioGroup>

</LinearLayout>

</ScrollView>