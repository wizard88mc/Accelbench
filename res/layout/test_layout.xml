<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sex: "
            android:textStyle="bold"/>
        
        <Spinner 
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age: "
            android:textStyle="bold"/>
        
        <Spinner 
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Height: "
            android:textStyle="bold"/>
        
        <Spinner 
            android:id="@+id/height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
        <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Accelerometer position: "
	        android:textStyle="bold" />
        
        <Spinner
            android:id="@+id/accelerometer_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
    </LinearLayout>
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
        <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Shoes type: "
	        android:textStyle="bold" />
        
        <Spinner 
            android:id="@+id/shoes_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
    </LinearLayout>

    <LinearLayout
        android:id="@+id/stairsContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="vertical" >
        
        	<TextView
        	    android:id="@+id/notes"
        	    android:layout_width="fill_parent"
        	    android:layout_height="wrap_content"
        	    android:lines="5"
        	    android:text="Provides some notes here about the data" />
        
            <Button
                android:id="@+id/btnStartTestData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="true"
                android:layout_gravity="center"
                android:text="Registra dati test" />

    </LinearLayout>

    <RadioGroup
        android:id="@+id/radioSamplingGroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:gravity="bottom"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioSamplingNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/radioSamplingGame"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:checked="false"
            android:enabled="false"
            android:text="65ms" />

        <RadioButton
            android:id="@+id/radioSamplingUI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/radioSamplingNormal"
            android:layout_gravity="left|center_vertical"
            android:checked="false"
            android:enabled="false"
            android:text="32ms" />
        
        <RadioButton
            android:id="@+id/radioSamplingGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right|center_vertical"
            android:checked="false"
            android:enabled="false"
            android:text="16ms" />

        <RadioButton
            android:id="@+id/radioSamplingFastest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/radioSamplingNormal"
            android:layout_gravity="left|center_vertical"
            android:checked="true"
            android:text="8ms" />
            <!-- android:checked="false"
            android:enabled="false" -->

        
            <!-- android:checked="false"
            android:enabled="false" -->
            
    </RadioGroup>

</LinearLayout>
